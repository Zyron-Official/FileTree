<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="?attr/colorControlHighlight">
    <item android:id="@android:id/mask" android:top="1.5dp" android:bottom="1.5dp">
        <shape>
            <solid android:color="?attr/colorControlActivated" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item android:id="@+id/state">
        <selector>
            <item android:drawable="@drawable/item_selected_background" android:state_selected="true" />
            <item android:drawable="@drawable/item_activated_background" android:state_activated="true" />
        </selector>
    </item>
</ripple>